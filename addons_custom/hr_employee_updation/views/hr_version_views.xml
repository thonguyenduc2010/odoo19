<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- This view extends the 'hr.version' list view to include the 'notice_days' field -->
    <record id="hr_version_list_view" model="ir.ui.view">
        <field name="name">hr.version.list_view.inherit.hr.employee.updation</field>
        <field name="model">hr.version</field>
        <field name="inherit_id" ref="hr.hr_version_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='wage']" position="after">
                <field name="notice_days"/>
            </xpath>
        </field>
    </record>
</odoo>
